{% extends "base.html.twig" %}

{% block content %}
    <div class="container py-5">
        <div class="team-header text-center">
            <h2 class="h1-responsive font-weight-bold text-center my-4">Our Pubs</h2>
            <p class="mb-5">is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the
                industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type
                and scrambled it to make a type specimen book. It has survived not only five centuries</p>
        </div>
        <div class="row">
            <div class="col-lg-10 mx-auto">

                {% for pub in pubs %}
                <!-- List group-->
                <ul class="list-group">
                    <!-- list group item-->
                    <li class="list-group-item mb-2 shadow">
                        <!-- Custom content-->
                        <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                            <div class="media-body order-2 order-lg-1">
                                <h5 class="mt-0 font-weight-bold mb-2 pt-3">{{ pub.name }}</h5>
                                <p class="font-italic text-muted mb-0 small">{{ pub.description }}</p>
                                <div class="d-flex align-items-center justify-content-between mt-1">
                                    <h6 class="font-weight-bold my-2">{{ pub.town }}</h6>
                                    <ul class="list-inline small">
                                        <li class="list-inline-item m-0"><i class="fa fa-star star-bg"></i></li>
                                        <li class="list-inline-item m-0"><i class="fa fa-star star-bg"></i></li>
                                        <li class="list-inline-item m-0"><i class="fa fa-star star-bg"></i></li>
                                        <li class="list-inline-item m-0"><i class="fa fa-star star-bg"></i></li>
                                        <li class="list-inline-item m-0"><i class="fa fa-star-o text-gray"></i></li>
                                    </ul>
                                </div>
                                <a class="small" href="#">Get directions</a>
                            </div>
                            <img src="{{ pub.image }}"
                                 alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
                        </div>
                        <!-- End -->
                    </li>
                    <!-- End -->
                </ul>
                <!-- End -->
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}
