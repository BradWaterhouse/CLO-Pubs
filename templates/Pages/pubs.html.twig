{% extends "base.html.twig" %}

{% block content %}
    <div class="container py-4">
        <div class="team-header text-center">
            <h2 class="h1-responsive font-weight-bold text-center my-3">Our Pubs</h2>
            <p class="mb-5">Here at CLO Pubs we manage numerous community driven pubs across the country, why not pop in and give us a visit?</p>
        </div>
        <div class="row">
            <div class="col-lg-10 mx-auto">

                {% for pub in pubs %}
                <!-- List group-->
                <ul class="list-group">
                    <!-- list group item-->
                    <li class="list-group-item mb-2 shadow">
                        <!-- Custom content-->
                        <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                            <div class="media-body order-2 order-lg-1">
                                <h5 class="mt-0 font-weight-bold mb-2 pt-3">{{ pub.name }}</h5>
                                <p class="font-italic text-muted mb-0 small">{{ pub.description }}</p>
                                <div class="d-flex align-items-center justify-content-between mt-1">
                                    <h6 class="font-weight-bold my-2">{{ pub.town }}</h6>
                                    <ul class="list-inline small pl-5">
                                        <li class="list-inline-item m-0"><i class="fa fa-star star-bg"></i></li>
                                        <li class="list-inline-item m-0"><i class="fa fa-star star-bg"></i></li>
                                        <li class="list-inline-item m-0"><i class="fa fa-star star-bg"></i></li>
                                        <li class="list-inline-item m-0"><i class="fa fa-star star-bg"></i></li>
                                        <li class="list-inline-item m-0"><i class="fa fa-star star-bg"></i></li>
                                    </ul>
                                </div>
                                <a class="small" target="_blank" href="https://www.google.co.uk/maps/place/{{ pub.postcode }}">Get directions</a>
                            </div>
                            <img src="{{ pub.image }}"
                                 alt="Generic placeholder image" class="ml-lg-5 order-1 order-lg- pub-image">
                        </div>
                        <!-- End -->
                    </li>
                    <!-- End -->
                </ul>
                <!-- End -->
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}
