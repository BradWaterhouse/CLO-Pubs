{% extends "Admin/admin_base.html.twig" %}
{% block content %}
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="mt-4">Team Members</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>

                    {% if success is defined %}
                        {% if success == true %}
                            <div class="alert alert-success text-center mb-3" role="alert">
                                {{ message }}
                            </div>
                        {% endif %}
                    {% endif %}

                    {% if success is defined %}
                        {% if success == false %}
                            <div class="alert alert-danger text-center mb-3" role="alert">
                                {{ message }}
                            </div>
                        {% endif %}
                    {% endif %}

                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-bar mr-1"></i>
                                    Add New Member
                                </div>
                                <div class="card-body">
                                    <form action="/dashboard/team/add" method="post">
                                        <div class="form-group">
                                            <label for="formGroupExampleInput">Name</label>
                                            <input type="text" class="form-control" name="name" id="name" required placeholder="Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="formGroupExampleInput2">Position</label>
                                            <input type="text" class="form-control" name="role" id="role" required placeholder="Position">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1">Bio</label>
                                            <textarea class="form-control" id="bio" name="bio" rows="3" required placeholder="Description of person"></textarea>
                                        </div>
                                        <button type="submit" class="btn blue-background text-white mb-2">Add Member</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                        <div class="col-xl-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-area mr-1"></i>
                                    Existing Team Members
                                </div>
                                <div class="card-body">
                                    <div class="card-body">
                                        <div class="table">
                                            <table class="table is-fullwidth is-hoverable" id="dataTable" width="100%" cellspacing="0">
                                                <thead class="titles-header">
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Position</th>
                                                    <th></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for teamMember in team %}
                                                <tr>
                                                    <td><a class="link-text" href="/dashboard/team/edit/{{ teamMember.id }}">{{ teamMember.name }}</a></td>
                                                    <td>{{ teamMember.role }}</td>
                                                    <td width="8%">
                                                        <form method="post" action="/dashboard/team/delete">
                                                            <input type="hidden" class="form-control" name="id" id="id" value="{{ teamMember.id }}">
                                                            <button type="submit" class="btn blue-background text-white btn-sm">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                </tbody>
                                                {% endfor %}
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
               </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; CLO Pubs LTD 2020</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
    </body>

{% endblock %}
