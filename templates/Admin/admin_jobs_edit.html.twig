{% extends "Admin/admin_base.html.twig" %}
{% block content %}
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="mt-4">Edit Pubs</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success text-center">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-bar mr-1"></i>
                                    Edit <b>{{ job.job.title }}</b>
                                </div>
                                <div class="card-body">
                                    <form action="/dashboard/job/update" method="post">
                                        <div class="form-row">
                                            <div class="form-group col-md-4">
                                                <label for="inputNamel4">Pub Name</label>
                                                <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="{{ job.job.title }}">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="inputEmail4">Job Title</label>
                                                <input type="text" class="form-control" id="title" name="title" placeholder="Position" value="{{ job.job.role }}">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="formGroupExampleInput2">Salary Range</label>
                                                <input type="text" class="form-control" id="salary" name="salary" placeholder="£20000 - £23000" value="{{ job.job.salary }}">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputNamel4">Town</label>
                                                <input type="text" class="form-control" id="town" name="town" placeholder="Town" value="{{ job.job.town }}">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4">Postcode</label>
                                                <input type="text" class="form-control" id="postcode" name="postcode" placeholder="Postcode" value="{{ job.job.postcode }}">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1">Description</label>
                                            <textarea class="form-control" id="description" name="description" rows="2" placeholder="Description of position">{{ job.job.description }}</textarea>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input type="checkbox" class="form-check-input mb-3" id="active" name="active"
                                                   {{  job.job.active }}>
                                            <label class="form-check-label" for="exampleCheck1">Active</label><br>
                                            <small class="text-muted">If ticked, the job will show up on the website.</small>
                                        </div>
                                        <input value="{{ job.job.id }}" hidden name="id" id="id">
                                        <button type="submit" class="btn blue-background text-white mb-5">Update Job</button>
                                    </form>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <form method="post" action="/dashboard/job/requirements/update">
                                                    <label for="exampleFormControlTextarea1">Requirements</label>
                                                    <textarea class="form-control" id="requirements" name="requirements" rows="4" placeholder="Requirements">{{ job.requirements }}</textarea>
                                                    <small class="text-muted">Each new line will be saved as a new requirement bullet point.</small><br>
                                                    <input value="{{ job.job.id }}" hidden name="id" id="id">
                                                    <button type="submit" class="btn blue-background text-white mb-2 mt-3">Update Requirements</button>
                                                </form>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <form method="post" action="/dashboard/job/expectations/update">
                                                    <label for="exampleFormControlTextarea1">Expectations</label>
                                                    <textarea class="form-control" id="expectations" name="expectations" rows="4" placeholder="Expectations">{{ job.expectations }}</textarea>
                                                    <small class="text-muted">Each new line will be saved as a new experience bullet point.</small><br>
                                                    <input value="{{ job.job.id }}" hidden name="id" id="id">
                                                    <button type="submit" class="btn blue-background text-white mb-2 mt-3">Update Expectations</button>
                                                </form>
                                            </div>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
               </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; CLO Pubs LTD 2020</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    </body>

{% endblock %}
