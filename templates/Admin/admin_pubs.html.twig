{% extends "Admin/admin_base.html.twig" %}
{% block content %}
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="mt-4">Pubs</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success text-center">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-bar mr-1"></i>
                                    Add New Pub
                                </div>
                                <div class="card-body">
                                    <form action="/dashboard/pubs/add" method="post">
                                        <div class="form-group">
                                            <label for="formGroupExampleInput">Name</label>
                                            <input type="text" class="form-control" id="name" name="name" placeholder="Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="formGroupExampleInput2">Town</label>
                                            <input type="text" class="form-control" id="town" name="town" placeholder="Town">
                                        </div>
                                        <div class="form-group">
                                            <label for="formGroupExampleInput2">Postcode</label>
                                            <input type="text" class="form-control" id="postcode" name="postcode" placeholder="Postcode">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1">Description</label>
                                            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Description of person / position"></textarea>
                                        </div>
                                        <button type="submit" class="btn blue-background text-white mb-2">Add Pub</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                        <div class="col-xl-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-area mr-1"></i>
                                    Existing Pubs
                                </div>
                                <div class="card-body">
                                    <div class="card-body">
                                        <div class="table">
                                            <table class="table is-fullwidth is-hoverable" id="dataTable" width="100%" cellspacing="0">
                                                <thead class="titles-header">
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Town</th>
                                                    <th></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for pub in pubs %}
                                                <tr>
                                                    <td><a href="/dashboard/pub/edit/{{ pub.id }}">{{ pub.name }}</a></td>
                                                    <td>{{ pub.town }}</td>
                                                    <td width="8%">
                                                        <form method="post" action="/dashboard/pub/delete">
                                                            <input type="hidden" class="form-control" name="id" id="id" value="{{ pub.id }}">
                                                            <button type="submit" class="btn blue-background text-white btn-sm">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
               </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; CLO Pubs LTD 2020</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
    </body>

{% endblock %}
