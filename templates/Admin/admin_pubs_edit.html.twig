{% extends "Admin/admin_base.html.twig" %}
{% block content %}
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="mt-4">Edit Pubs</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success text-center">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-bar mr-1"></i>
                                    Edit <b>{{ pub.name }}</b>
                                </div>
                                <div class="card-body">
                                    <form action="/dashboard/pub/update" method="post">
                                        <div class="form-group">
                                            <label for="formGroupExampleInput">Name</label>
                                            <input type="text" class="form-control" name="name" id="name" value="{{ pub.name }}" required placeholder="Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="formGroupExampleInput2">Town</label>
                                            <input type="text" class="form-control" name="town" id="town" value="{{ pub.town }}" required placeholder="Town">
                                        </div>
                                        <div class="form-group">
                                            <label for="formGroupExampleInput2">Postcode</label>
                                            <input type="text" class="form-control" name="postcode" id="postcode" value="{{ pub.postcode }}" required placeholder="Postcode">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1">Description</label>
                                            <textarea class="form-control" id="description" name="description" rows="3" required placeholder="Description of pub">{{ pub.description }}</textarea>
                                        </div>
                                        <input hidden type="text" value="{{ pub.id }}" name="id" id="id">
                                        <button type="submit" class="btn blue-background text-white mb-2">Update</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
               </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; CLO Pubs LTD 2020</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    </body>

{% endblock %}
