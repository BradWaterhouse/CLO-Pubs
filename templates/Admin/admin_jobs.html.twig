{% extends "Admin/admin_base.html.twig" %}
{% block content %}
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="mt-4">Jobs</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success text-center">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-bar mr-1"></i>
                                    Add Job Advert
                                </div>
                                <div class="card-body">
                                    <form action="/dashboard/job/add" method="post">

                                        <div class="form-row">
                                            <div class="form-group col-md-4">
                                                <label for="inputNamel4">Pub Name</label>
                                                <input type="text" class="form-control" id="name" name="name" placeholder="Name">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="inputEmail4">Job Title</label>
                                                <input type="text" class="form-control" id="title" name="title" placeholder="Position">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="formGroupExampleInput2">Salary Range</label>
                                                <input type="text" class="form-control" id="salary" name="salary" placeholder="£20000 - £23000">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputNamel4">Town</label>
                                                <input type="text" class="form-control" id="town" name="town" placeholder="Town">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4">Postcode</label>
                                                <input type="text" class="form-control" id="postcode" name="postcode" placeholder="Postcode">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1">Description</label>
                                            <textarea class="form-control" id="description" name="description" rows="2" placeholder="Description of position"></textarea>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="exampleFormControlTextarea1">Requirements</label>
                                                <textarea class="form-control" id="requirements" name="requirements" rows="4" placeholder="Requirements"></textarea>
                                                <small class="text-muted">Each new line will be saved as a new requirement bullet point.</small>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="exampleFormControlTextarea1">Expectations</label>
                                                <textarea class="form-control" id="expectations" name="expectations" rows="4" placeholder="Expectations"></textarea>
                                                <small class="text-muted">Each new line will be saved as a new experience bullet point.</small>
                                            </div>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input type="checkbox" class="form-check-input mb-3" id="active" name="active" checked>
                                            <label class="form-check-label" for="exampleCheck1">Active</label><br>
                                            <small class="text-muted">If ticked, the job will show up on the website.</small>
                                        </div>
                                        <button type="submit" class="btn blue-background text-white mb-2">Add Job</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                        <div class="col-xl-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-chart-area mr-1"></i>
                                    Current Job Adverts
                                </div>
                                <div class="card-body">
                                    <div class="card-body">
                                        <div class="table">
                                            <table class="table is-fullwidth is-hoverable" id="dataTable" width="100%" cellspacing="0">
                                                <thead class="titles-header">
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Town</th>
                                                    <th></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for job in jobs %}
                                                <tr>
                                                    <td><a href="/dashboard/job/{{ job.id }}">{{ job.title }}</a></td>
                                                    <td>{{ job.role }}</td>
                                                    <td width="8%">
                                                        <form method="post" action="/dashboard/job/delete">
                                                            <input type="hidden" class="form-control" name="id" id="id" value="{{ job.id }}">
                                                            <button type="submit" class="btn blue-background text-white btn-sm">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
               </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; CLO Pubs LTD 2020</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/datatables-demo.js"></script>
    </body>

{% endblock %}
